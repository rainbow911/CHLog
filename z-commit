function openRemoteWebsite() {
	open -a Safari https://github.com/rainbow911/CHLog
}

function quickCommit() {
	# 1、cd 到当前目录
	currentDir=$(cd "$(dirname "$0")"; pwd)
	cd ${currentDir}

	# 2、提交操作
	git add .
	git commit -m "备份提交"
	echo "\033[32m——----- commit finished \033[0m"
	git push -u origin master
	echo "\033[32m——----- push finished \033[0m"

	echo "\033[32m——----- 提交完成🎉🎉🎉🎈🎈🎈\033[0m"
}

function commitWithInput() {
	# 1、cd 到当前目录
	currentDir=$(cd "$(dirname "$0")"; pwd)
	cd ${currentDir}

	# 2、获取提交的信息
	echo "\033[32m——----- 请输入提交信息(不要输入空格)：🙃🙃🙃 \033[0m"
	read commitInfo

	# 3、提交操作
	git add .
	git commit -m $commitInfo
	echo "\033[32m——----- commit finished \033[0m"
	git push -u origin master
	echo "\033[32m——----- push finished \033[0m"

	echo "\033[32m——----- 提交完成🎉🎉🎉🎈🎈🎈\033[0m"
}

function chooseAction() {
	echo "\033[32m——----- 请选择要进行的操作：\033[0m"
	echo "\033[32m——----- 1：快速备份提交 \033[0m"
	echo "\033[32m——----- 2：填写commit信息再提交 \033[0m"

	read selectIndex

	if [ $selectIndex -eq 1 ]
	then
		quickCommit
	elif [ $selectIndex -eq 2 ]
	then
		commitWithInput
	else
		echo "\033[32m——----- 没有需要进行的操作😝 \033[0m"
	fi
}

function commit() {
	chooseAction
	openRemoteWebsite
	sleep 3
	exit 1
}

commit
